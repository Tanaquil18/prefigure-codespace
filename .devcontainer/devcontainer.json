{
    "name": "PreFigure-Codespaces",
    "dockerFile": "Dockerfile",
    "postCreateCommand": "pip3 install -r /root/prefigure/requirements.txt && npm install --prefix=/root/prefigure/js",

    "customizations": {
        "codespaces": {
            "openFiles": ["samples/tangent.xml"]
        },
        "vscode": {
            "extensions": [
                "vitaliymaz.vscode-svg-previewer"
            ]
        }
    }
}
